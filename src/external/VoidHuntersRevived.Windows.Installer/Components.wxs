<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <ComponentGroup Id="ProductComponents">
      <ComponentRef Id="MainAppShortcut" />
      <ComponentRef Id="INSTALLFOLDER_Comp" />
    </ComponentGroup>

    <DirectoryRef Id="INSTALLFOLDER" FileSource="publish">
      <Component Id="INSTALLFOLDER_Comp" DiskId="1" Guid="">
        <CreateFolder>
          <Permission User="Everyone" GenericAll="yes" />
        </CreateFolder>
      </Component>
      
      <Component Id="MainAppShortcut" Guid="">
        <!-- Define shortcut -->
        <Shortcut Id="ShortcutMainAppShortcut" 
                  Name="VoidHunters Revived"
                  Target="[INSTALLFOLDER]\VoidHuntersRevived.Windows.Launcher.exe"
                  Directory="ProgramMenuFolder"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="icon.ico"
                  />

        <!-- Unique key for component shortcut -->
        <Registry Id="RegShortcutKey" Root="HKCU" Key="SOFTWARE\VoidHuntersRevived" Name="Shortcut" Value="1" Type="integer" KeyPath="yes" />
      
        <!-- Remove start menu item -->
        <RemoveFile Id="RemoveStartMenuShortcut" Name="VoidHunters Revived" On="uninstall"/>
        <RemoveFolder Id="RemoveAppCacheFolder" Directory="AppCacheFolder" On="uninstall"/>
      </Component>
    </DirectoryRef>
	</Fragment>
</Wix>
