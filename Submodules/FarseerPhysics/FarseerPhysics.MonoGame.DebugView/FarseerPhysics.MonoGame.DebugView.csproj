  <ItemGroup>
    <None Remove="Content\Font.xnb" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Include="Content\Font.xnb">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FarseerPhysics.MonoGame\FarseerPhysics.MonoGame.csproj" />
  </ItemGroup>

</Project>
